<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_home_bg"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20" />

        <com.recycling.toolsapp.view.CircleProgressView
            android:id="@+id/cpv_view"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_5"
            app:backgroundColor="#E0E0E0"
            app:cpv_maxProgress="100"
            app:cpv_progress="50"
            app:cpv_progressColor="#FF0000"
            app:cpv_strokeWidth="@dimen/dp_5"
            app:cpv_textColor="#FF0000"
            app:cpv_textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="清运门已打开 \n请尽快取出物品"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpv_view" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_title">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_before_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="清运前重量"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/gline2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_after_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="清运后重量"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/gline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_clear_before_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="清运重量"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"

                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/gline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_clear_after_text" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_before_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="15.45kg"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_clear_before_text"
                app:layout_constraintLeft_toRightOf="@+id/gline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_clear_before_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_after_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0.33kg"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_clear_after_text"
                app:layout_constraintLeft_toRightOf="@+id/gline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_clear_before_value"
                app:layout_constraintTop_toTopOf="@+id/tv_clear_after_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_clear_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="15.12kg"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_clear_text"
                app:layout_constraintLeft_toRightOf="@+id/gline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_clear_after_value"
                app:layout_constraintTop_toTopOf="@+id/tv_clear_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>